{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:teamsfx": {
      "cache": false,
      "persistent": true
    },
    "tauri:build": {
      "dependsOn": ["build"]
    },
    "tauri:dev": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "serve": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
